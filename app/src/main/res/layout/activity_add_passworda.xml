<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dbrinkman.passwordmanager.AddPassworda"
    android:id="@+id/RelativeLayout"
    android:background="#7d92ef">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Password"
        android:id="@+id/txtvwAddPasswords"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type:"
        android:id="@+id/txtvwAccountType"
        android:textSize="20dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/txtvwAddPasswords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:id="@+id/txtvwUsername"
        android:textSize="20dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/edtxtAccountType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:id="@+id/txtvwPassword"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtxtPassword"
        android:layout_alignTop="@+id/txtvwPassword"
        android:layout_toRightOf="@+id/txtvwUsername"
        android:layout_toEndOf="@+id/txtvwUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password:"
        android:id="@+id/txtvwConfirmPassword"
        android:textSize="20dp"
        android:layout_above="@+id/txtvwUserInfo3"
        android:layout_toLeftOf="@+id/edtxtConfirmPassword"
        android:layout_toStartOf="@+id/edtxtConfirmPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtxtConfirmPassword"
        android:layout_above="@+id/txtvwUserInfo3"
        android:layout_alignLeft="@+id/edtxtPassword"
        android:layout_alignStart="@+id/edtxtPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Password"
        android:id="@+id/btnAddPassword"
        android:onClick="AddPassworda"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edtxtConfirmPassword"
        android:layout_alignEnd="@+id/edtxtConfirmPassword"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Passwords"
        android:id="@+id/btnViewPasswords"
        android:layout_below="@+id/txtvwUserInfo3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ViewPasswords" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwUserInfo3"
        android:layout_above="@+id/btnAddPassword"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtxtAccountType"
        android:layout_alignTop="@+id/txtvwAccountType"
        android:layout_toRightOf="@+id/txtvwAccountType"
        android:layout_toEndOf="@+id/txtvwAccountType" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtxtUsername"
        android:layout_alignTop="@+id/txtvwUsername"
        android:layout_alignLeft="@+id/edtxtPassword"
        android:layout_alignStart="@+id/edtxtPassword" />
</RelativeLayout>
